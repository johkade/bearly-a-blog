<div id="grainy-background">
  <svg
    id="grainy-svg"
    preserveAspectRatio="none"
    xmlns="http://www.w3.org/2000/svg"
    version="1.1"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    viewBox="0 0 700 700"
    width="700"
    height="700"
    opacity="0.087"
    ><defs
      ><filter
        id="nnnoise-filter"
        x="-20%"
        y="-20%"
        width="140%"
        height="140%"
        filterUnits="objectBoundingBox"
        primitiveUnits="userSpaceOnUse"
        color-interpolation-filters="linearRGB"
      >
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.2"
          numOctaves="4"
          seed="15"
          stitchTiles="stitch"
          x="0%"
          y="0%"
          width="100%"
          height="100%"
          result="turbulence"></feTurbulence>
        <feSpecularLighting
          surfaceScale="10"
          specularConstant="0.5"
          specularExponent="20"
          lighting-color="#ffffff"
          x="0%"
          y="0%"
          width="100%"
          height="100%"
          in="turbulence"
          result="specularLighting"
        >
          <feDistantLight azimuth="3" elevation="152"></feDistantLight>
        </feSpecularLighting>
      </filter></defs
    ><rect width="700" height="700" fill="transparent"></rect><rect
      width="700"
      height="700"
      fill="#ffffff"
      filter="url(#nnnoise-filter)"></rect></svg
  >
  <div id="gradient-overlay"></div>
  <div id="blurry-overlay"></div>
</div>

<style>
  #grainy-background {
    z-index: -2;
    position: fixed;
    bottom: 0;
    -webkit-transform: translate3d(0, 0, 0);
    right: 0;
    left: 0;
    height: 120%;
    user-select: none;
    -moz-user-select: none;
    -khtml-user-select: none;
    -webkit-user-select: none;
    -o-user-select: none;
  }
  #grainy-svg {
    height: 120%;
    width: 100%;
    -webkit-transform: translate3d(0, 0, 0);
    position: fixed;
    bottom: 0;
    left: 0;
  }
  #gradient-overlay {
    z-index: -1;
    height: 120%;
    width: 100%;
    -webkit-transform: translate3d(0, 0, 0);
    position: fixed;
    bottom: 0;
    left: 0;
    background: linear-gradient(90deg, #090510 0%, #0c0914 35%, #0e1219 100%);
  }
  #blurry-overlay {
    position: fixed;
    z-index: 2;
    top: 0;
    right: 0;
    -webkit-transform: translate3d(0, 0, 0);
    left: 0;
    bottom: 0;
    composes: commonBlur;
    backdrop-filter: blur(0.5px);
    -webkit-backdrop-filter: blur(0.5px);
    filter: blur(0);
    background: linear-gradient(
      128deg,
      #0c0914ff 0%,
      #0c091499 35%,
      #0c091400 100%
    );
  }
</style>
